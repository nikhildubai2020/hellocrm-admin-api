  "paths": {
    "/rpc/xAddCities.get": {
      "post": {
        "tags": ["Cities"],
        "summary": "Get cities",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {"page": 1, "limit": 10, "search": "Mumbai"}
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "example": {
                  "data": [{"city_id": 1, "city_name": "Mumbai", "state_id": 1, "status": true}],
                  "currentPage": 1, "totalPages": 5, "totalRecords": 50
                }
              }
            }
          }
        }
      }
    },
    "/rpc/xAddCities.create": {
      "post": {
        "tags": ["Cities"],
        "summary": "Create city",
        "requestBody": {
          "content": {
